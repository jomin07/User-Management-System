<div class="container mt-5">
    <h1>Add User</h1>

    <form action="" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control mt-3" name="name" id="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control mt-3" name="email" id="email" required>
        </div>
        <div class="form-group">
            <label for="mno">Mobile Number:</label>
            <input type="text" class="form-control mt-3" name="mno" id="mno" required>
        </div>
        <div class="form-group">
            <label for="image">Profile Picture:</label>
            <input type="file" class="form-control-file mt-3" name="image" id="image" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control mt-3" name="password" id="password" required>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary mt-3" value="Add User">
        </div>
    </form>

    <a href="/admin/dashboard" class="btn btn-secondary mt-3">Go Back</a>
</div>

